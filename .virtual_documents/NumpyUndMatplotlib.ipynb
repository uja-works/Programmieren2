# Funktion zur Schätzung von pi mit Monte Carlo
from random import random
def mc_pi(N):
    hits = 0 # Anzahl der Treffer
    for i in range(N):
        x = random()
        y = random()    
        if x*x + y*y <= 1:
            hits += 1
    return 4*hits/N


%%timeit
mc_pi(4_000_000)


