import numba
import time


def mc_naive(N):
    hits = 0 # Anzahl der Treffer
    for i in range(N):
        x = random()
        y = random()    
        if x*x + y*y <= 1:
            hits += 1
    return 4*hits/N
    
@numba.njit
def mc_naive_jit(N):
    hits = 0 # Anzahl der Treffer
    for i in range(N):
        x = random()
        y = random()    
        if x*x + y*y <= 1:
            hits += 1
    return 4*hits/N

def mc_numpy(N):
    x = np.random.random(N)
    y = np.random.random(N)
    hits = (x*x + y*y <= 1)
    return 4*np.sum(hits)/N

@numba.njit
def mc_numpy_jit(N):
    x = np.random.random(N)
    y = np.random.random(N)
    hits = (x*x + y*y <= 1)
    return 4*np.sum(hits)/N


N = 4_000_000

t1 = time.perf_counter()
pi_mc = mc_naive(N)
t2 = time.perf_counter()
print(f"mc_naive: \t {pi_mc} in {t2 - t1} sec.")

t1 = time.perf_counter()
pi_mc = mc_naive_jit(N)
t2 = time.perf_counter()
print(f"mc_naive_jit: \t {pi_mc} in {t2 - t1} sec.")

t1 = time.perf_counter()
pi_mc = mc_numpy(N)
t2 = time.perf_counter()
